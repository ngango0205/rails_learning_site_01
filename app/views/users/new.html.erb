<% provide :title, t(".title_signup") %>
<h1><%= t ".title_signup" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %>
    <%= render "shared/error_messages" %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, t(".confirm") %>
      <%= f.password_field :password_confirmation %>

      <%= f.label :role, class: "checkbox inline" do %>
      <%= f.check_box :role %>
      <span><%= t ".name_teacher" %></span>
      <% end %>

      <%= f.submit t(".create"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
