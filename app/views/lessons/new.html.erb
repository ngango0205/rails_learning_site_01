<%= provide :title, t(".title") %>
<h1><%= t ".title" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @lesson do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.label :content %>
      <%= f.text_field :content %>

      <%= f.label :category_id %>
      <%= f.select :category_id, options_for_select(@all_category.map{ |c| [c.name, c.id]})%>

      <%= f.submit t(".create_lesson"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
